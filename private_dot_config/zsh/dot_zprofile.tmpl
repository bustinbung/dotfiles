path=(
    # core PATH
    $HOME/{,s}bin
    /usr/local/{,s}bin

    # emacs
    $HOME/.config/emacs/bin

    # java
    /usr/lib/jvm/default/bin
    {{- if eq .chezmoi.os "darwin" }}
    #fzf
    /opt/homebrew/opt/fzf/bin
    {{- end }}

    $path
)

# Make sure there are no duplicates in path
typeset -gU path

# Set programs
export PAGER=less
export EDITOR=nvim
export VISUAL=emacs

# Region settings
export LANG='en_US.UTF-8'
