export ZDOTDIR=~/.config/zsh
[[ -f $ZDOTDIR/.zshenv ]] && . $ZDOTDIR/.zshenv

path=(
    # core PATH
    $HOME/{,s}bin
    /usr/local/{,s}bin

    # emacs
    $HOME/.config/emacs/bin
    
    #fzf
    /opt/homebrew/opt/fzf/bin

    # spicetify
    $HOME/.spicetify

    # cargo
    $HOME/.cargo/bin

    $path
)

# Make sure there are no duplicates in path
typeset -gU path

# Set programs
export PAGER=less
export EDITOR=nvim
export VISUAL=emacs

# Region settings
export LANG='en_US.UTF-8'
